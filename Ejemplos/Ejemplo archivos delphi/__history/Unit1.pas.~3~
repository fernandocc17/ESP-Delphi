unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
tregistro=record
  campo1:string[20];
  campo2:string[20];
  campo3:string[30];
end;
  TForm1 = class(TForm)
    txt_1: TEdit;
    txt_2: TEdit;
    txt_3: TEdit;
    Button1: TButton;
    Button2: TButton;
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
  public

  end;

var
  Form1: TForm1;
  //registro del record tregistro
  rec: tregistro;
  //variable para archivos donde estaran los records de tregistro
  tfile: file of tregistro;
implementation

//Se indica que se usara la unidad 2 , con todo lo que contiene
uses Unit2;

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
  rec.campo1:=txt_1.Text;
  rec.campo2:=txt_2.Text;
  rec.campo3:=txt_3.Text;
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
//dentro de la unidad2 , se encuentra la forma2
form2.showmodal;
end;

end.
